
#define SENSOR_PIN   A0

int sensor_value;

int i = 0;
int dashes = 0;

void setup() {
  pinMode(SENSOR_PIN, INPUT_PULLUP);
  Serial.begin(9600);
}

void loop() {
  // read in value
  sensor_value = digitalRead(SENSOR_PIN);
  
  // printing output and choosing number of dashes to display
  if (sensor_value == HIGH) {
    Serial.print("High");
    dashes = 50;
  } else {
    Serial.print("Low");
    dashes = 5;
  } 

  // display dashes for easy visual record
  while (i < dashes) {
    Serial.print("_");
    i++;
  } 
  i = 0;

  Serial.println(' ');

  delay(50);

}
